      <p
          class="text-light-12 font-extrabold lg:text-5xl text-4xl tracking-tighter lg:pb-8">
          {tg_header}
        </p><p
          class="mt-4 text-lg max-w-xl tracking-tight text-light-11 mx-auto lg:pb-8">
          {tg_subheader}
        </p>
    </div>

