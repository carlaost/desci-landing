---
const { tm_header } = Astro.props;
const { tm_item1_name } = Astro.props;
const { tm_item1_position } = Astro.props;
const { tm_item1_content } = Astro.props;
const { tm_item2_name } = Astro.props;
const { tm_item2_position } = Astro.props;
const { tm_item2_content } = Astro.props;
const { tm_item3_name } = Astro.props;
const { tm_item3_position } = Astro.props;
const { tm_item3_content } = Astro.props;
const { tm_item3_image } = Astro.props;
const { tm_item2_image } = Astro.props;
const { tm_item1_image } = Astro.props;

---


<section class="bg-gray-100">
    <div
      class="mx-auto w-full lg:px-24 max-w-7xl md:px-12 items-center px-8 py-24">
      <div class="max-w-2xl mx-auto md:text-center">
        <h2 class="text-black font-extrabold lg:text-5xl text-4xl tracking-tight">
          {tm_header}
        </h2>
      </div>
      <ul
        role="list"
        class="grid max-w-2xl grid-cols-1 gap-6 mx-auto mt-16 sm:gap-8 lg:mt-20 lg:max-w-none lg:grid-cols-3">
        <li>
          <figure class="relative h-full p-6 bg-white rounded-3xl">
            <blockquote class="relative">
              <p class="text-base text-gray-500">
                {tm_item1_content}
              </p>
            </blockquote>
            <figcaption
              class="relative flex items-center justify-between pt-6 mt-6 border-t border-gray-100">
              <div>
                <div
                  class="text-lg font-semibold leading-6 text-black font-display">
                  {tm_item1_name}
                </div>
                <div class="mt-1 text-sm text-gray-500">
                  {tm_item1_position}
                </div>
              </div>
              <div class="overflow-hidden rounded-full bg-gray-50">
                <img
                  alt=""
                  src={tm_item1_image}
                  width="56"
                  height="56"
                  decoding="async"
                  data-nimg="future"
                  class="object-cover h-14 w-14"
                  loading="lazy"
                  style="color: transparent"
                />
              </div>
            </figcaption>
          </figure>
        </li>
        <li>
          <figure class="relative h-full p-6 bg-white rounded-3xl">
            <blockquote class="relative">
              <p class="text-base text-gray-500">
                {tm_item2_content}
              </p>
            </blockquote>
            <figcaption
              class="relative flex items-center justify-between pt-6 mt-6 border-t border-gray-100">
              <div>
                <div
                  class="text-lg font-semibold leading-6 text-black font-display">
                  {tm_item2_name}
                </div>
                <div class="mt-1 text-sm text-gray-500">
                  {tm_item2_position}
                </div>
              </div>
              <div class="overflow-hidden rounded-full bg-gray-50">
                <img
                  alt=""
                  src={tm_item2_image}
                  width="56"
                  height="56"
                  decoding="async"
                  data-nimg="future"
                  class="object-cover h-14 w-14"
                  loading="lazy"
                  style="color: transparent"
                />
              </div>
            </figcaption>
          </figure>
        </li>
        <li>
          <figure class="relative h-full p-6 bg-white rounded-3xl">
            <blockquote class="relative">
              <p class="text-base text-gray-500">
                {tm_item3_content}
              </p>
            </blockquote>
            <figcaption
              class="relative flex items-center justify-between pt-6 mt-6 border-t border-gray-100">
              <div>
                <div
                  class="text-lg font-semibold leading-6 text-black font-display">
                  {tm_item3_name}
                </div>
                <div class="mt-1 text-sm text-gray-500">
                  {tm_item3_position}
                </div>
              </div>
              <div class="overflow-hidden rounded-full bg-gray-50">
                <img
                  alt=""
                  src={tm_item3_image}
