      <nav
        :class="{'flex': open, 'hidden': !open}"
        class="flex-col items-center flex-grow hidden md:pb-0 md:flex md:justify-end md:flex-row gap-6">
        <a
          class={`nav-link ${activePage === 'researchers' ? 'active' : ''}`}
          href="/researchers">Researchers</a
        >
        <a
          class={`nav-link ${activePage === 'journals' ? 'active' : ''}`}
          href="/journals">Journals</a
        >
        <a
          class="button-secondary"
          href="/login">Enter App</a
        >
      </nav>
    </div>
  </div>
