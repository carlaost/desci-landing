    site_name: "YourSitesName",
  }}
  twitter={{
    handle: "@Mike_Andreuzza",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>

<BaseLayout>
  <script>

    setTimeout(() => {

      const tabButtons = document.querySelectorAll('.tab-button');
      const tabPanes = document.querySelectorAll('.tab-pane');
      
      tabButtons.forEach(button => {
        button.addEventListener('click', function() {
          tabButtons.forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          
          tabPanes.forEach(pane => pane.classList.remove('active'));
          const selectedTab = document.getElementById(this.getAttribute('data-tab'));
          selectedTab.classList.add('active');
        });
      });
    }, 0);
  </script>
  <ProtocolHero 
    slogan={slogan} 
    title={title} />
    <Welcome 
    ov_header={ov_header} 
    ov_subheader={ov_subheader}
    ov_item1_header={ov_item1_header}
    ov_item1_content={ov_item1_content}
    ov_item2_header={ov_item2_header}
    ov_item2_content={ov_item2_content}
    ov_item3_header={ov_item3_header}
    ov_item3_content={ov_item3_content}/>
  <TargetGroups
    tg_header={tg_header}
    tg1_name={tg1_name}
    tg1_argument={tg1_argument}
    tg2_name={tg2_name}
    tg2_argument={tg2_argument}
    tg3_name={tg3_name}
    tg3_argument={tg3_argument}
    tg4_name={tg4_name}
    tg4_argument={tg4_argument}/>
  <Metrics 
    m_header={m_header} 
    m_item1_caption={m_item1_caption}
    m_item1_value={m_item1_value}
    m_item1_subheader={m_item1_subheader}
    m_item2_caption={m_item2_caption}
    m_item2_value={m_item2_value}
    m_item2_subheader={m_item2_subheader}
    m_item3_caption={m_item3_caption}
    m_item3_value={m_item3_value}
    m_item3_subheader={m_item3_subheader}/>
  <Footer />
</BaseLayout>
