import BaseLayout from "../layouts/BaseLayout.astro";
import ProtocolHero from "../components/landing/ProtocolHero.astro";
import TargetGroups from "../components/global/TargetGroups.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
import Welcome from "../components/landing/Welcome.astro";
import Overview from "../components/landing/Overview3.astro";
import Metrics from "../components/landing/Metrics.astro";






---

<AstroSeo
  title="DeSci Labs"
  description="Building the future of science"
  canonical="https://www.desci.com"
  openGraph={{
    url: "https://www.desci.com",
    title: "DeSci Labs",
    description: "Building the future of science",
    images: [
      {
        url: "preview.png",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
    ],
    site_name: "DeSci Labs",
  }}
  twitter={{
    handle: "@DeSciLabs",
    site: "@site",
    cardType: "summary_large_image",
  }}></AstroSeo>

<BaseLayout>
  <script>

    setTimeout(() => {

      const tabButtons = document.querySelectorAll('.tab-button');
      const tabPanes = document.querySelectorAll('.tab-pane');
      
      tabButtons.forEach(button => {
        button.addEventListener('click', function() {
          tabButtons.forEach(btn => btn.classList.remove('active'));
          this.classList.add('active');
          
          tabPanes.forEach(pane => pane.classList.remove('active'));
          const selectedTab = document.getElementById(this.getAttribute('data-tab'));
          selectedTab.classList.add('active');
        });
      });
    }, 0);
  </script>
  <ProtocolHero 
    slogan={slogan} 
    title={title} />
    <Welcome 
    ov_header={ov_header} 
    ov_subheader={ov_subheader}
    ov_item1_header={ov_item1_header}
    ov_item1_content={ov_item1_content}
    ov_item2_header={ov_item2_header}
    ov_item2_content={ov_item2_content}
    ov_item3_header={ov_item3_header}
    ov_item3_content={ov_item3_content}
    ov_item4_header={ov_item4_header}
    ov_item4_content={ov_item4_content}/>
  <TargetGroups
    tg_header={tg_header}
    tg_subheader={tg_subheader}
    tg1_name={tg1_name}
    tg1_argument={tg1_argument}
    tg2_name={tg2_name}
    tg2_argument={tg2_argument}
    tg3_name={tg3_name}
    tg3_argument={tg3_argument}
    tg4_name={tg4_name}
    tg4_argument={tg4_argument}/>
  <Metrics 
    m_header={m_header} 
    m_item1_caption={m_item1_caption}
    m_item1_value={m_item1_value}
    m_item1_subheader={m_item1_subheader}
    m_item2_caption={m_item2_caption}
    m_item2_value={m_item2_value}
    m_item2_subheader={m_item2_subheader}
    m_item3_caption={m_item3_caption}
    m_item3_value={m_item3_value}
    m_item3_subheader={m_item3_subheader}/>
  <Footer />
</BaseLayout>
